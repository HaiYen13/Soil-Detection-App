<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yenvth.soilDetectionApp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_2"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.SoilDetectionApp">
        <activity android:name=".login.PhoneVerifyActivity"/>
        <activity android:name=".login.PhoneLoginActivity"/>
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" />
        <activity android:name=".login.InfoActivity"/>
        <activity android:name=".soilDetail.SoilDetailActivity" />
        <activity android:name=".map.MapActivity" />
        <activity android:name=".detection.DetectionActivity" />
        <activity android:name=".history.HistoryActivity" />
        <activity android:name=".main.MainActivity" />
        <activity android:name=".diction.DictionActivity" />
        <activity
            android:name=".labeling.LabelingActivity"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".login.LoginActivity"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity android:name=".splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_map_api_key" />
    </application>

</manifest>